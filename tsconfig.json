{
  "compilerOptions": {
    "target": "ESNext",
    "module": "NodeNext",
    "outDir": "./out",
    //用于调试
    "sourceMap": true,
    //删除注释
    "removeComments": true,
    //严格模式
    "strict": true,
    "moduleResolution": "NodeNext",
    //未知
    "esModuleInterop": true,
    //装饰器支持
    "experimentalDecorators": true,
    // 因系统的不同，统一文件大小写引入
    "forceConsistentCasingInFileNames": true,
    //元数据支持
    "emitDecoratorMetadata": true
  },
  "include": ["src", "app"]
}
